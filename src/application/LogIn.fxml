                     <HBox.margin>
                        <Insets right="3.0" />
                     </HBox.margin></TextField>
                  <PasswordField fx:id="passwordInput" promptText="password" />
               </children>
               <BorderPane.margin>
                  <Insets top="50.0" />
               </BorderPane.margin>
            </HBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
